#include <stdio.h>
#include <stdlib.h>
#include <math.h> // Para funciones matemáticas como sqrt y pow

int main() {
    int opcion;

    // Imprimir el menú y solicitar la opción
    printf("Seleccione una opción:\n"
           "1. Suma\n"
           "2. Resta\n"
           "3. Multiplicación\n"
           "4. División\n"
           "5. Residuo\n"
           "6. Función\n"
           "7. Raíz cuadrada\n"
           "8. Potencia\n"
           "9. Área de triángulo\n"
           "10. Área de rectángulo\n"
           "11. Salir\n\n");
    printf("Ingrese la opción deseada: ");
    scanf("%d", &opcion);

    // Validar si la opción está dentro del rango (1 a 11)
    if (opcion >= 1 && opcion <= 11) {
        // Opción válida: imprimir el mensaje correspondiente
        printf("Usted seleccionó la operación: %d - ", opcion);
        switch (opcion) {
            case 1:
                printf("Suma\n");
                break;
            case 2:
                printf("Resta\n");
                break;
            case 3:
                printf("Multiplicación\n");
                break;
            case 4:
                printf("División\n");
                break;
            case 5:
                printf("Residuo\n");
                break;
            case 6:
                printf("Función\n");
                break;
            case 7:
                printf("Raíz cuadrada\n");
                break;
            case 8:
                printf("Potencia\n");
                break;
            case 9:
                printf("Área de triángulo\n");
                break;
            case 10:
                printf("Área de rectángulo\n");
                break;
            case 11:
                printf("Salir\n");
                break;
        }
    } else {
        // Opción no válida: imprimir mensaje de error
        printf("Opción no válida. Por favor seleccione una opción del 1 al 11.\n");
    }

    return 0;
}

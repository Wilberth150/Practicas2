#include <stdio.h>
#include <stdlib.h>

int main() {
    // Declaración de variables
    int valor1, valor2, residuo;

    // Solicitar al usuario que ingrese dos valores enteros
    printf("Ingrese el primer valor entero: ");
    scanf("%d", &valor1);
    printf("Ingrese el segundo valor entero: ");
    scanf("%d", &valor2);

    // Calcular el residuo de la división entre los dos valores
    residuo = valor1 % valor2;

    // Verificar si el residuo es igual a cero
    if (residuo == 0) {
        // Imprimir la operación realizada si el residuo es cero
        printf("La operación realizada es: %d / %d = %d\n", valor1, valor2, valor1 / valor2);
    } else {
        // Imprimir el residuo si es diferente de cero
        printf("El residuo de %d / %d es: %d\n", valor1, valor2, residuo);
    }

    return 0;
}

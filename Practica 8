#include <stdio.h>

int main() {
    int numero;

    // Solicitar al usuario que ingrese un valor entero
    printf("Ingrese un número entero: ");
    scanf("%d", &numero);

    // Mostrar la tabla de multiplicar del número ingresado
    printf("Tabla de multiplicar de %d:\n", numero);
    
    // Utilizar un bucle for para iterar de 1 a 10 e imprimir las multiplicaciones
    for (int i = 1; i <= 10; i++) {
        printf("%d x %d = %d\n", numero, i, numero * i);
    }

    return 0;
}
